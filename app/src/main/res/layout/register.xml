<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:filterTouchesWhenObscured="true">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center">
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rname_layout"
            android:layout_marginTop="55dp"
            android:gravity="center"
 >
    <EditText
        android:id="@+id/rname"

        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:inputType="text"
        android:paddingRight="60dp"
        android:maxLength="20"
        android:paddingLeft="70dp"
        android:textSize="18dp"
        android:gravity="left|center_vertical" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="用户名："
                android:textSize="16dp"
                android:visibility="visible"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rpassword1_layout"
            android:layout_below="@id/rname_layout"
            android:layout_marginTop="6dp"
            android:gravity="center" >
            <EditText
                android:id="@+id/rpassword1"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingLeft="55dp"
                android:paddingRight="60dp"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="8dp"
                android:text="密码："
                android:textSize="16dp" />

        </FrameLayout>
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rpassword2_layout"
            android:layout_below="@id/rpassword1_layout"
            android:layout_marginTop="6dp"
            android:gravity="center" >


            <EditText
                android:id="@+id/rpassword2"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingLeft="80dp"
                android:paddingRight="60dp"/>
            <TextView
                android:id="@+id/textView6"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="8dp"
                android:textSize="16dp"
                android:text="确认密码：" />
        </FrameLayout>



    <Button
        android:id="@+id/check"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_below="@id/rpassword2_layout"
        android:layout_marginTop="30dp"
        android:background="#ff336699"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="确认" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/check"
        android:layout_below="@id/check"
        android:background="#00000000"
        android:text="返回"
        android:gravity="right|center_vertical"

        android:textSize="16sp"/>






</RelativeLayout>
</RelativeLayout>
